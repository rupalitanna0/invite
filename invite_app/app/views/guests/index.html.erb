<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Middlename</th>
      <th>Lastname</th>
      <th>Age</th>
      <th>Addresss</th>
      <th>State</th>
      <th>Gender</th>
      <th>Cellno</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.middlename %></td>
        <td><%= guest.lastname %></td>
        <td><%= guest.age %></td>
        <td><%= guest.addresss %></td>
        <td><%= guest.state %></td>
        <td><%= guest.gender %></td>
        <td><%= guest.cellno %></td>
        <td><%= guest.email %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

